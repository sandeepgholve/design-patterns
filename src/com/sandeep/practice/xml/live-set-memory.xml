    <pjd>
        <job-id>1234</job-id>
        <transaction>1</transaction>
        <target-host>pserver123</target-host>
        <server>
            <uuid>44449999-3333-0000-0001-000000121239</uuid>
            <ram-in-mb>1024</ram-in-mb>
            <memory>
                <prefix>p1024</prefix>
                <dimms>255</dimms>
